<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Survey Details</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <%- include('partials/header') %>

  <div class="survey-container">
    <h1 class="survey-title"><%= survey.title %></h1>
    <p class="survey-description"><%= survey.description %></p>
    <form action="/surveys/<%= survey._id %>/submit" method="post">
      <% survey.questions.forEach(function(question, index) { %>
        <div class="question">
          <h3>Question <%= index + 1 %>: <%= question.questionText %></h3>
          <% question.options.forEach(function(option) { %>
            <label class="option">
              <input type="radio" name="question_<%= index %>" value="<%= option.optionText %>">
              <span class="checkmark"></span>
              <%= option.optionText %>
            </label>
          <% }); %>
        </div>
      <% }); %>
      <button type="submit">Submit Survey</button>
    </form>
  </div>  

  <%- include('partials/footer') %>
</body>
</html>
